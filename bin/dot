#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

export BASH=$HOME/.dotfiles

if [ "$(uname -s)" == "Darwin" ]
then
	# Set macOS defaults
	echo "Setting Mac OS X defaults"
	$BASH/platform/Darwin/set-defaults.sh

	# Upgrade homebrew
	echo "› brew update"
	brew update
	echo "Execute 'brew upgrade' when you're ready."
fi

# Install dotfile installers...
# Most have been removed, but just in case.
echo "› $BASH/script/install"
$BASH/script/install
