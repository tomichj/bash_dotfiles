#!/usr/bin/env bash

#
# Install dotfiles from the git repo, and bootstrap your system
#

if [[ ! -d ~/.dotfiles ]]; then
	echo "Installing tomichj/dotfiles"
	git clone https://github.com/tomichj/dotfiles ~/.dotfiles
	~/.dotfiles/script/bootstrap
	~/.dotfiles/bin/dot
else
	echo "Aborting; you have an existing .dotfiles directory."
fi
